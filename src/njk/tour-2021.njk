{% extends '_templates/base.njk' %}

{% block page_title %}Tour 2021{% endblock %}

{% block page_description %}The tour 2021 page.{% endblock %}

{% block content %}
  <h2>Discography</h2>
  <p>Here is a collection of Queen's discography.</p>
  <hr>
  <div class="row">
    {% for shows in queen.tour2021 %}
      <div class="col-sm-6 col-lg-4">
        <div class="card mb-4 bg-light border-success">
          <div class="card-body">
            <h5 class="card title">{{shows.city}}</h5>
            <h6 class="card-title">{{shows.venue}}</h6>
            <p class="card-image">{{shows.date}}</p>
            <a href="{{ queen.source }}" target="blank">Source</a>
          </div>
        </div>
      </div>
      <hr>
    {% endfor %}
  </div>
{% endblock %}